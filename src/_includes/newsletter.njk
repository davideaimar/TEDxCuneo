{# {{ form | log }} #}

<div id="mc_embed_signup" class="{{ class }}">
    <h2 class="max-w-287 mb-3 md:mb-7">{{ form.title }}</h2>
    <form action="https://tedxcuneo.us2.list-manage.com/subscribe/post?u=b326ddb735f14f6f463d8b8c8&amp;id=8494465c49" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank" novalidate>
        <div id="mc_embed_signup_scroll">
            <div class="mc-field-group mb-3 md:mb-7">
                <!-- <label for="mce-EMAIL">{{ form.emailPlaceholder }}</label> -->
                <input type="email" value="" placeholder="{{ form.emailPlaceholder }}" name="EMAIL" class="required email rounded-none px-3 py-3 placeholder-tedWhite text-tedWhite relative bg-transparent border border-tedWhite outline-none focus:outline-none focus:ring w-full md:w-1/2 md:mr-11" id="mce-EMAIL">
            </div>
            <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
            </div><!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_b326ddb735f14f6f463d8b8c8_8494465c49" tabindex="-1" value=""></div>
            <p class="mb-3 md:mb-7">Accetto l' <a class="font-bold" href="{{ form.privacyPage.slug }}" target="_blank">informativa al trattamento dati</a> e condivido il mio indirizzo email</p>
            <div class="clear">
                <input type="submit" value="{{ form.buttonText }}" name="subscribe" id="mc-embedded-subscribe" class="button cursor-pointer font-bold text-small uppercase text-tedBlack bg-tedWhite py-3 px-4 rounded-none">
            </div>
        </div>
    </form>
</div>