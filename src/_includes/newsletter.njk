{# {{ form | log }} #}

<div id="{{ anchor }}" class="{{ class }}">
    <h2 class="max-w-287 mb-3 md:mb-7">{{ form.title }}</h2>
    <form action="https://tedxcuneo.us2.list-manage.com/subscribe/post?u=b326ddb735f14f6f463d8b8c8&amp;id=8494465c49" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate" target="_blank">
        <div id="mc_embed_signup_scroll">
            <div class="mc-field-group mb-3 md:mb-7">
                <!-- <label for="mce-EMAIL">{{ form.emailPlaceholder }}</label> -->
                <input type="email" value="" required placeholder="Inserisci il tuo indirizzo email" name="EMAIL" class="required email rounded-none px-3 py-3 placeholder-tedWhite text-tedWhite relative bg-transparent border border-tedWhite outline-none focus:outline-none focus:ring w-full md:w-1/2 md:mr-11" id="mce-EMAIL">
            </div>
            <div id="mce-responses" class="clear">
                <div class="response" id="mce-error-response" style="display:none"></div>
                <div class="response" id="mce-success-response" style="display:none"></div>
            </div><!-- real people should not fill this in and expect good things - do not remove this or risk form bot signups-->
            <div style="position: absolute; left: -5000px;" aria-hidden="true"><input type="text" name="b_b326ddb735f14f6f463d8b8c8_8494465c49" tabindex="-1" value=""></div>
                       
            <div class="mb-3 md:mb-7">
                <label class="flex justify-start items-center">
                    <div class="bg-transparent border border-tedWhite w-6 h-6 flex flex-shrink-0 justify-center items-center mr-2">
                        <input type="checkbox" class="checkbox opacity-0 absolute" required>
                        <svg class="fill-current hidden w-4 h-4 text-green-500 pointer-events-none" viewBox="0 0 20 20"><path d="M0 11l2-2 5 5L18 3l2 2L7 18z"/></svg>
                    </div>
                    <div class="select-none">Accetto l' <a class="font-bold" href="{{ form.privacyPage.slug | absoluteUrl }}" target="_blank">informativa al trattamento dati</a> e condivido il mio indirizzo email</div>
                </label>
            </div>
            <div class="clear">
                <input type="submit" value="{{ form.buttonText }}" name="subscribe" id="mc-embedded-subscribe" class="button cursor-pointer font-bold text-small uppercase text-tedBlack bg-tedWhite py-3 px-4 rounded-none">
            </div>
        </div>
    </form>
</div>