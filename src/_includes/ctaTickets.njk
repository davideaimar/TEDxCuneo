
{% if cta.show %}
    <section class="{{ class }} bg-tedGray rounded-lg flex flex-col justify-center relative overflow-hidden p-2">
        <h2 class="z-20 text-center max-w-615 mx-auto mt-10 mb-16">{{ cta.initialText }}</h2>
        {% if cta.buttonText and cta.ticketsPage.slug %}
            <a href="{{ cta.ticketsPage.slug | absoluteUrl }}" class="z-20 text-center no-underline link-underline link-underline-fixed  mx-auto mb-10">
                <h1>{{ cta.buttonText }}</h1>
            </a>
        {% elif cta.buttonText and cta.ticketsUrl %}
            <a href="{{ cta.ticketsUrl }}" target="_blank" class="z-20 text-center no-underline link-underline link-underline-fixed  mx-auto mb-10">
                <h1>{{ cta.buttonText }}</h1>
            </a>
        {% endif %}
    </section>
{% endif %}
