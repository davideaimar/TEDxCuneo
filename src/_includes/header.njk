<header class="header w-full fixed top-0 bg-tedBlack" x-data="{ isOpen: false }" :class="{ 'z-50': isOpen, 'z-30': ! isOpen }">
    <div class="container flex py-4 justify-between" >
        <div class="flex-0 w-52 lg:mr-4">
            <a href="/">
                <img src="/assets/img/tedxcuneo_logo.svg" alt="Logo TEDxCuneo svg">
            </a>
        </div>
        {# {% if page_data.slug=="/partnership/" %}
            <div class="h-14 lg:hidden"></div>
            <div class="mt-8 hidden lg:block lg:text-right lg:flex-1 lg:align-middle lg:mt-0">
        {% else %}
            <div class="mt-8 lg:text-right lg:flex-1 lg:align-middle lg:mt-0">
        {% endif %}
            <p>
                <span class="mr-2 lg:mr-4">seguici su:</span>
                <a target="_blank" class="mr-2 lg:mr-4" href="{{ settings.instagram }}">Instagram↗</a>
                <a target="_blank" href="{{ settings.facebook }}">Facebook↗</a>
            </p>
        </div> #}
        <nav class="bg-tedBlack flex flex-col justify-end fixed top-16 right-0 left-0 bottom-0 p-2 lg:block lg:p-0 lg:flex-1 lg:relative lg:top-auto lg:self-end"
             :class="{ 'block': isOpen, 'hidden lg:block': !isOpen }"
        >
            <ul class="flex flex-col px-2 mb-8 md:px-12 lg:flex-row lg:justify-end lg:px-0 lg:mb-0"
                :class="{ 'hidden lg:flex': !isOpen }"
                @click.away="isOpen = false"
                x-show.transition="true"
            >
                {% for item in header %}
                    <li class="py-3 lg:px-4"><a href="{{item.slug}}" class="text-m_xl font-bold lg:font-normal lg:text-d_base {{ 'underline' if page_data.slug == item.slug else 'no-underline'}}">{{item.headerTitle}}</a></li>
                {% endfor %}
            </ul>
        </nav>
        <button
            @click="isOpen = !isOpen"
            type="button"
            class="block flex-0 text-white focus:outline-none self-end lg:hidden"
            :class="{ 'transition transform-180': isOpen }" 
        >
            <svg class="h-6 w-6 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" >
            <path
                x-show="isOpen"
                fill-rule="evenodd"
                clip-rule="evenodd"
                d="M18.278 16.864a1 1 0 0 1-1.414 1.414l-4.829-4.828-4.828 4.828a1 1 0 0 1-1.414-1.414l4.828-4.829-4.828-4.828a1 1 0 0 1 1.414-1.414l4.829 4.828 4.828-4.828a1 1 0 1 1 1.414 1.414l-4.828 4.829 4.828 4.828z"
            />
            <path
                x-show="!isOpen"
                fill-rule="evenodd"
                d="M4 5h16a1 1 0 0 1 0 2H4a1 1 0 1 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2zm0 6h16a1 1 0 0 1 0 2H4a1 1 0 0 1 0-2z"
            />
            </svg>
        </button>
    </div>
</header>