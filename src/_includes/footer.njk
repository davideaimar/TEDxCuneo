<footer class="container flex-grow-0 py-4 ">
    <div class="border-t border-tedWhite grid grid-cols-1 py-4 gap-y-5 md:gap-x-10 md:grid-cols-2 md:py-7">
        <div class="flex flex-col justify-between">
            <div>
                <p class="mb-4 md:mb-6">©&nbsp;{{ helpers.currentYear() }}&nbsp;{{ footer.site_name }}</p>
                <p class="mb-4 md:mb-6">{{ footer.license | nl2br | safe }}</p>                
            </div>
            <div>
                <p class="mb-4 md:mb-6"><a href="{{ settings.instagram }}" target="_blank">Instagram ↗</a></p>
                <p class="mb-4 md:mb-6"><a href="{{ settings.facebook }}" target="_blank">Facebook ↗</a></p>
                <p class=""><a href="{{ settings.linkedin }}" target="_blank">Linkedin ↗</a></p>
            </div>
        </div>
        <div class="flex flex-col justify-between">
            <img class="hidden w-52 mb-4 md:mb-6 md:block" src="/assets/img/tedxcuneo_logo.svg" alt="Logo TEDxCuneo svg">
            <p class="mb-4 md:mb-6"><a class="text-decoration-tedRed font-bold" href="mailto:{{ settings.email }}">{{ settings.email }}</a></p>
            <p class="mb-4 md:mb-6">  
                {{ footer.address_text | nl2br | safe }}
                <br/>
                {{ footer.cf }}
            </p>
            <div>
                {% for link in footer.links %}
                {{ footer.links.length | log }}
                    <p class="{% if loop.index < footer.links.length %}mb-1{% endif %}"> 
                        <a href="{{ link.url }}" target="_blank">{{ link.label }}</a>
                    </p>
                {% endfor %}
            </div>
        </div>
    </div>
    
</footer>