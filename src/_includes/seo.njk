{# {{ seo | log }} #}
{# {{ slug | log }} #}


{% if seo.hide and seo.hide==true  %}
    <meta name="robots" content="noindex" />
{% else %}
    <meta name="robots" content="max-snippet:-1, max-image-preview: large">
{% endif %}

<title>{{ seo.title or settings.default_seo.title | escape }}</title>
<meta property="og:title" content="{{ seo.title or settings.default_seo.title | escape }}">

{% set desc = seo.description or settings.default_seo.description %}
{% if desc %}
    <meta name="description" content="{{ desc | escape  }}">
    <meta property="og:description" content="{{ desc | escape }}">
{% endif %}

<meta name="twitter:card" content="summary_large_image">
{# <meta name="twitter:site" content="@{{ metadata.author.twitterHandle }}">
<meta name="twitter:creator" content="@{{ metadata.author.twitterHandle }}"> #}

{% if seo.image and seo.image.url %}
    <meta property="og:image" content="{{ seo.image.url | toOgImage }}">
{% else %}
    <meta property="og:image" content="{{ settings.default_seo.image }}">
{% endif %}

<link rel="canonical" href="{{ settings.url }}{{ slug }}">

