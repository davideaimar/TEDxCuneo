{# Uncomment for logging page fields avaliable #}
{# {{ d | log }} #}

<div class="container">
	<section class="mb-9">
		<p class="mt-9 mb-6 uppercase md:mt-10"><a class="text-decoration-tedRed" href="/{{ d.edition.slug }}">‚Üê TORNA ALL'EDIZIONE</a></p>
		<h1 class="mb-4 max-w-800 md:mb-5 ">{{ d.speaker.talkTitle }}</h1>
		<h3 class="text-tedDarkWhite">{{ d.speaker.name }}&nbsp;{{ d.speaker.surname }}</h3>
	</section>
	<section class="mb-20">
		<div class="w-full lg:w-8/12 lg:m-auto">
			<div class="relative h-0 overflow-hidden w-full" style="padding-bottom:  56.25%;">
				<iframe class="absolute top-0 left-0 w-full h-full" src="https://www.youtube-nocookie.com/embed/{{ d.speaker.youtubeId }}" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
			</div>
		</div>
	</section>
	<section class="mb-20">
		<h2 class="mb-6">Speaker</h2>
		{% set s=d.speaker %}
		{% include "speaker.njk" %}
	</section>
</div>