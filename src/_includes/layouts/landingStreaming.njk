	</div>
	
	{% if d.tedxcuneoBlock %}
		<section class="grid grid-cols-1 mb-32 md:grid-cols-12 md:gap-x-6">
			<picture class="mb-12 md:mb-0 md:col-span-6">
				<source type="image/avif" srcset="{{ d.tedxcuneoBlock.image.url }}?w=620&fm=avif 1x, {{ d.tedxcuneoBlock.image.url }}?w=1240&fm=avif 2x">
				<source type="image/webp" srcset="{{ d.tedxcuneoBlock.image.url }}?w=700&fm=webp 1x, {{ d.tedxcuneoBlock.image.url }}?w=1400&fm=webp 2x">
