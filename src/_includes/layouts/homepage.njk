<script src="/assets/js/swiper.min.js"></script>
<script>
    // speakers slider
    function initSwiper(refs){
        swiper = new Swiper(refs.container, {
            loop: false,
            slidesPerView: 1.4,
            spaceBetween: 40,
        
            breakpoints: {
                1024: {
                    slidesPerView: 3.5,
                    spaceBetween: 60,
                },
                1400: {
                    slidesPerView: 4.5,
                    spaceBetween: 60,
                },
            },
        });
        swiper.on('transitionEnd', function() {
            index=swiper.realIndex;
        });
        return swiper;
    }


</script>