<script src="/assets/js/swiper.min.js"></script>
<script>
    // speakers slider
    function initSwiper(refs){
        swiper = new Swiper(refs.container, {
            loop: false,
            slidesPerView: 1.2,
            spaceBetween: 10,
        
            breakpoints: {
                540: {
                    slidesPerView: 1.5,
                    spaceBetween: 10,
                },
                1024: {
                    slidesPerView: 2.5,
                    spaceBetween: 10,
                },
            },
        });
        swiper.on('transitionEnd', function() {
            index=swiper.realIndex;
        });
        return swiper;
    }
</script>

